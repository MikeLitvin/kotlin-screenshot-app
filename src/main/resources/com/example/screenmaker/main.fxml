<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="main" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.screenmaker.MainController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="openMI" mnemonicParsing="false" text="Open" />
                  <MenuItem fx:id="saveMI" mnemonicParsing="false" text="Save" />
                  <MenuItem fx:id="saveAsMI" mnemonicParsing="false" text="Save As" />
                  <MenuItem fx:id="closeMI" mnemonicParsing="false" text="Close" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #D2D2D2;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Delay" />
                  <Slider fx:id="delaySlider" showTickMarks="true" />
               </children>
            </VBox>
            <CheckBox fx:id="minimizeCheckBox" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" text="Minimize" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="screenshotButton" alignment="BOTTOM_CENTER" mnemonicParsing="false" text="Screenshot" onAction="#onScreenshotButtonClicked"/>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <bottom>
      <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" style="-fx-background-color: #D2D2D2;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <ColorPicker fx:id="colorPicker" />
                  <CheckBox fx:id="eraserCheckBox" mnemonicParsing="false" text="Eraser" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Brush Size" />
                  <Slider fx:id="brushSizeSlider" showTickLabels="true" showTickMarks="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
   <center>
      <StackPane fx:id="imgContainer" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="img" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Canvas fx:id="canvas" height="200.0" width="200.0" />
         </children>
      </StackPane>
   </center>
</BorderPane>
